{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "./src/index.ts"
    ]
}